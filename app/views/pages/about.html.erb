<div class="app-card-container">
	<div class="card">
		<h1>About Me</h1>
		<div class="row">
			<div class="col-md-5">
				<%= image_tag "profile.jpg", width: 300, alt: "Profile image"%>
				<div class="skills">
					<div class="skill">
						<% @skills.each do |skill| %>
							<h4><%= skill.title %></h4>
							<div class="progress">
								<div class="progress-bar progress-bar-striped bg-warning"
											role="progressbar"
											aria-valuenow="<%= skill.percent_utiliced %>"
											aria-valuemax="100"
											style="width: <%= skill.percent_utiliced %>%;">
									
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
			<div class="col-md-7">
				<p>Find me in app/views/pages/about.html.erb</p>

				<p>
					<button class="btn btn-primary"
									type="button"
									data-toggle="collapse"
									data-target="#jobHistory"
									aria-expanded="false"
									aria-controler="jobHistory">
						Job History
					</button>
					<button class="btn btn-primary"
									type="button"
									data-toggle="collapse"
									data-target="#education"
									aria-expanded="false"
									aria-controler="education">
						Education
					</button>
					</p>

					<p>
						<div class="collapse" id='jobHistory'>
							<div class="card card-body">
								Job 1
							</div>
							<div class="card card-body">
								Job 2
							</div>
						</div>

						<div class="collapse" id='education'>
							<div class="card card-body">
								School 1
							</div>
							<div class="card card-body">
								School 2
							</div>
							<div class="card card-body">
								School 3
							</div>
						</div>
					</p>
					

			</div>
			
		</div>
	</div>
</div>



